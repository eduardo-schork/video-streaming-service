{
  "name": "video-streaming-service",
  "version": "1.0.0",
  "main": "./src/run.ts",
  "license": "MIT",
  "author": "Eduardo Schork",
  "resolveJsonModule": true,
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "ffmpeg": "^0.0.4",
    "mongoose": "^6.8.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@faker-js/faker": "^7.6.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/ffmpeg": "^1.0.4",
    "@types/jest": "^29.2.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.11.18",
    "@types/uuid": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "prettier": "^2.8.3",
    "ts-jest": "^29.0.0-next.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.1",
    "tslib": "^2.4.1",
    "typescript": "^4.9.4",
    "ts-node": "^10.7.0"
  },
  "scripts": {
    "start": "ts-node --transpile-only -r tsconfig-paths/register src/run.ts",
    "dev": "ts-node-dev --respawn -r tsconfig-paths/register --ignore-watch node_modules src/run.ts",
    "build": "tsc",
    "lint": "eslint --ext .ts --fix ./src -c .eslintrc.json",
    "test": "jest",
    "drop-database": ". ./.env && npx ts-node ./src/infra/database/mongodb-adapter/scripts/drop-database.script.ts",
    "seed-database": ". ./.env && npx ts-node -r tsconfig-paths/register ./src/infra/database/mongodb-adapter/scripts/seed-database.script.ts",
    "clean-snapshots": "rm -rf storage/snapshots/*",
    "setup-database:dev": "yarn clean-snapshots && yarn drop-database && yarn seed-database"
  }
}
